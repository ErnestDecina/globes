{
    "name": "Node 20 + PostgreSQL Dev Container",
    "build": {
      "dockerfile": "Dockerfile"
    },
    "forwardPorts": [5432],
    "customizations": {
      "vscode": {
        "settings": {
            "terminal.integrated.shell.linux": "/bin/bash"
        }
      }  
    },
    "postCreateCommand": "npm install",
    "remoteUser": "devuser",
    "features": {},
    "mounts": [
      "source=pgdata,target=/var/lib/postgresql/data,type=volume"
    ]
  }
  